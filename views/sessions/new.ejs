<h2>Login</h2>

<form method="POST" action="/login">
	<div class="field">
		<br>
		<p><label for="login">Login:</label></p>
		<p><input type="text" id="login" name="login" size="30" /></p>
	</div>

	<div class="field">
		<br>
		<p><label for="password">Password:</label></p>
		<p><input type="password" id="password" name="password" size="30" /></p>	
	</div>

	<div class="actions">
		<br>
		<p><input name="commit" type="submit" value="Login" /></p>
	</div>
</form>