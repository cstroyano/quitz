<br>
<p>
	<label for="preg" class="rem">Pregunta:</label>
	<input type="text" id="preg" name="quiz[pregunta]" value="<%= quiz.pregunta %>" />
</p>
<br>
<p>
	<label for="resp" class="rem">Respuesta:</label>
	<input type="text" id="resp" name="quiz[respuesta]" value="<%= quiz.respuesta %>" />
</p>
<br>
<p>
	<label for="tema" class="rem">Tema:</label>
	<select name="quiz[destema]" id="tema">
		<% var i; for( i = 0; i < temas.length; i++ ) { %>
			<% if ( temas[ i ].destema === quiz.destema ) { %>
				<option value="<%= temas[ i ].destema %>" selected><%= temas[ i ].destema %></option>
			<% } else { %>
				<option value="<%= temas[ i ].destema %>"><%= temas[ i ].destema %></option>
			<% } %>
		<% } %>
	</select>
</p>
<br>
<p>
	<a href="/quizes"><button type="button">Cancelar</button></a> <input type="submit" value="Salvar">
</p>